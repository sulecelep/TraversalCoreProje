@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api ile Ziyaretçi Ekleme</h1>
<br />
<form method="post">

    <div class="form-group">
        @Html.Label("Ad")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Soyad")
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mail")
        <input type="text" asp-for="Mail" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Ülke")
        <input type="text" asp-for="Country" class="form-control" />
    </div>
    <br />
    <button class="btn btn-outline-primary">Ziyaretçi Oluştur</button>
</form>

