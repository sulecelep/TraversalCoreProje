@model AnnouncementUpdateDto
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="AnnouncementID" />  
    <div class="form-group">
        @Html.Label("Duyuru Başlığı")
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger" style="font-size:12px;"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Duyuru İçeriği")
        <textarea cols="30" rows="5" class="form-control" asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger" style="font-size:12px;"></span>

    </div>

    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>