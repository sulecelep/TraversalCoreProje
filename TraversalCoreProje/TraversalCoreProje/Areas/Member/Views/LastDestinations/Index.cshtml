@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}



<div class="card mb-4">

    <div class="row match-height me-4">


        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-6 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title danger mt-4">@item.City</h4>
                        <h6 class="card-subtitle text-muted">@item.DayNight</h6>
                    </div>
                    <div class="card-body mt-0" style="max-width:300px; max-height:220px;">
                        <img class="" src="@item.Image" style="width:280px; height:200px;" alt="Card image cap">
                    </div>

                    <div class="card-body">
                        <p class="card-text">@item.Details1.Substring(0,100)... </p>
                    </div>
                    <div class="card-footer border-top-blue-grey border-top-lighten-5 text-muted">
                        <span class="float-left">@item.Price₺</span>
                        <span class="float-right">
                            <a href="/Destination/DestinationDetails/@item.DestinationID" class="card-link">
                                Detaylar
                                <i class="la la-angle-right"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>

        }
    </div>
</div>





